{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true,
      "arrowFunctions": true
    }
  },
  "plugins": [
    "react",
    "import",
    "jsx-a11y"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "arrow-parens": 0,
    "no-console": "warn",
    "react/jsx-props-no-spreading": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "import/no-useless-path-segments": 0,
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": [
          "**/*.test.js",
          "**/*.spec.js",
          "src/setupTests.js",
          "build-utils/*"
        ]
      }
    ],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "react/state-in-constructor": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 2,
    "class-methods-use-this": 0,
    "curly": [
      "error",
      "multi-line"
    ],
    "import/no-unresolved": 0,
    "import/no-named-as-default": 0,
    "no-shadow": [
      "error",
      {
        "allow": [
          "req",
          "res",
          "err"
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpackConfig/webpack.dev.config.js"
      }
    }
  }
}